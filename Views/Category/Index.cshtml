@model List<Category>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<partial name="_Notification"/>
<div class="container">
  <div class="row pt-4">
     <div class="col-6">
        <h2 class="text-primary">
          Category List
        </h2>
      </div>
      
      <div class="col-6 text-end" >
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> Create New Category
        </a>
      </div>
  </div>

  <div style="text-align: center">
    <table class="table table-striped">
      <thead>
      <tr>
        <th scope="col">Category Name</th>
        <th scope="col">Display Order</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      @foreach (var obj in Model)
      {
        <tr>
          <td>@obj.Name</td>
          <td>@obj.DisplayOrder</td>
          <td>
            <a asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pen-fill"></i> Edit</a>
            <a asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-danger mx-2" ><i class="bi bi-trash"></i> Delete</a>
          </td>
        </tr>
      }
      </tbody>
    </table>
  </div>
</div>